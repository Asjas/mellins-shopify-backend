{
  "name": "node-fastify-typescript-template",
  "main": "dist/index.mjs",
  "author": "A-J Roos <asjas@hey.com>",
  "type": "module",
  "engines": {
    "node": ">=14",
    "npm": ">=7"
  },
  "scripts": {
    "postinstall": "npm run prisma:generate",
    "start": "node dist/index.mjs",
    "build": "npm-run-all clean build:docker",
    "build:docker": "babel --extensions '.ts' src/ --out-dir dist/ --out-file-extension .mjs",
    "dev": "nodemon",
    "clean": "rimraf dist",
    "test": "tap",
    "test:w": "tap -w",
    "test:inspect": "tap -O -T --node-arg=--inspect-brk",
    "coverage": "npm test -- --coverage-report=lcov",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "docker:up": "docker-compose up -d --build",
    "docker:down": "docker-compose down -d",
    "docker:nuke": "docker-compose down -v --rmi all",
    "check-types": "tsc",
    "lint": "eslint --ext .ts .",
    "lint-fix": "npm run lint -- --fix",
    "prettier": "prettier --ignore-path .eslintignore \"**/*.+(ts)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "validate": "npm-run-all --parallel check-types check-format lint build"
  },
  "dependencies": {
    "@babel/cli": "7.14.8",
    "@babel/core": "7.15.0",
    "@babel/plugin-syntax-top-level-await": "7.14.5",
    "@babel/preset-typescript": "7.15.0",
    "babel-plugin-module-extension-resolver": "1.0.0-rc.2",
    "fastify": "3.20.1",
    "fastify-autoload": "3.8.0",
    "fastify-cookie": "^5.3.1",
    "fastify-cors": "^6.0.2",
    "mysql": "2.18.1",
    "fastify-etag": "2.1.0",
    "fastify-env": "2.1.1",
    "fastify-plugin": "3.0.0",
    "fastify-favicon": "3.1.0",
    "fastify-healthcheck": "3.1.0",
    "fastify-helmet": "^5.3.2",
    "fastify-nodemailer": "^5.0.0",
    "fastify-session": "^5.2.1",
    "fastify-shopify-graphql-proxy": "^0.13.0",
    "fluent-json-schema": "3.0.1",
    "pino-pretty": "5.1.3",
    "under-pressure": "5.7.0"
  },
  "devDependencies": {
    "@types/node": "16.4.13",
    "@types/tap": "15.0.5",
    "eslint-config-asjas": "0.0.25",
    "nodemon": "2.0.12",
    "npm-run-all": "4.1.5",
    "prisma": "2.29.0",
    "rimraf": "3.0.2",
    "tap": "15.0.9",
    "ts-node": "10.2.0",
    "typescript": "4.3.5"
  }
}
