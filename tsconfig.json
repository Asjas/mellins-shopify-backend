{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "incremental": true,
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "ESNEXT"],
    "noEmit": true,
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  }
}
