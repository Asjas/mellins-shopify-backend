{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "noEmit": false,
    "isolatedModules": true,
    "allowJs": false
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "src/**/*"]
}
